{
  "name": "pug-template",
  "version": "0.0.1",
  "description": "Webpack template for creating new web application with pug and scss",
  "author": "Kirill Lahtachev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lacodda/pug-template"
  },
  "scripts": {
    "start": "npm run start:wds",
    "start:wds": "webpack-dev-server --config webpack/webpack.dev.js --open --hot",
    "build": "webpack --config webpack/webpack.prod.js --progress",
    "server": "node webpack/server.js",
    "webpack-serve": "node webpack/webpack-serve.js",
    "analyze": "webpack-bundle-analyzer ./stats.json",
    "lint:scripts": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "generate-ssl": "node ./scripts/generate-ssl --hostname localhost",
    "add-generated-ssl": "open /Applications/Utilities/Keychain\\ Access.app ssl/ssl.crt"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-rc.1",
    "@babel/core": "^7.0.0-rc.1",
