{
  "name": "pug-template",
  "version": "0.0.1",
  "description": "Webpack template for creating new web application with pug and scss",
  "author": "Kirill Lahtachev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lacodda/pug-template"
  },
  "scripts": {
    "start": "npm run serve:dev",
    "serve:dev": "cross-env NODE_ENV=development node webpack/dev-server.js",
    "serve:production": "cross-env NODE_ENV=production node webpack/spa-server.js",
    "start-wds": "webpack-dev-server --env development",
    "start-wds-nodemon": "nodemon --watch webpack.config.js --exec \"webpack-dev-server --open --hot --env development\"",
    "build": "cross-env NODE_ENV=production webpack --env production --config webpack.config.js --progress",
    "test-server": "npm run build && npm run serve:production",
    "analyze": "webpack-bundle-analyzer ./stats.json",
    "lint:scripts": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "generate-ssl": "node ./scripts/generate-ssl --hostname localhost",
    "add-generated-ssl": "open /Applications/Utilities/Keychain\\ Access.app ssl/ssl.crt"
  },
  "devDependencies": {
    "@babel/cli": "7.0.0-beta.54",
    "@babel/core": "7.0.0-beta.54",
    "@babel/plugin-syntax-dynamic-import": "7.0.0-beta.54",
    "@babel/preset-env": "7.0.0-beta.54",
    "autoprefixer": "^8.5.0",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^8.0.0-beta",
    "clean-webpack-plugin": "^0.1.19",
    "compression": "^1.7.3",
    "cross-env": "^5.2.0",
    "css-loader": "^0.28.11",
    "cssnano": "^3.10.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-compat": "^2.1.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-react": "^7.8.2",
    "eslint-plugin-standard": "^3.1.0",
    "express": "^4.16.3",
    "fast-sass-loader": "^1.4.5",
    "file-loader": "^1.1.11",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "glob": "^7.1.2",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^3.2.0",
    "image-webpack-loader": "^4.2.0",
    "mini-css-extract-plugin": "0.4.1",
    "node-sass": "4.9.0",
    "nodemon": "^1.17.4",
    "optimize-css-assets-webpack-plugin": "^4.0.1",
    "postcss-loader": "^2.1.5",
    "pug-html-loader": "^1.1.5",
    "purify-css": "^1.2.5",
    "purifycss-webpack": "^0.7.0",
    "style-loader": "^0.21.0",
    "stylelint": "^9.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.1.0",
    "stylelint-webpack-plugin": "^0.10.4",
    "svg-sprite-loader": "^3.8.0",
    "uglifyjs-webpack-plugin": "1.2.5",
    "url-loader": "^1.0.1",
    "webpack": "^4.8.3",
    "webpack-bundle-analyzer": "^2.12.0",
    "webpack-cli": "2.1.3",
    "webpack-dev-server": "^3.1.4",
    "webpack-manifest-plugin": "^2.0.2",
    "webpack-merge": "^4.1.2",
    "webpack-serve": "^2.0.2",
    "webpack-stats-plugin": "0.2.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "engines": {
    "node": ">=6.0.0"
  },
  "dependencies": {}
}
